{
  "name": "piggo-legends",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "private": true,
  "workspaces": [
    "app/**",
    "pkg/**"
  ],
  "scripts": {
    "build": "rm -rf dist/ && tsc && copyfiles -u 1 -E app/**/*.html dist/app/ && copyfiles -u 1 -E app/**/*.css dist/app/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "yarn build && electron-forge start -l -i -p dist",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "game-tft": "yarn build && node ./dist/games/tft/main.js",
    "game-catan": "yarn build && node ./dist/games/catan/main.js",
    "webpage": "yarn build && http-server ./dist/app/webpage -p 8080"
  },
  "author": "",
  "license": "ISC",
  "packageManager": "yarn@3.4.1",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "http-server": "^14.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-deb": "^6.0.4",
    "@electron-forge/maker-rpm": "^6.0.4",
    "@electron-forge/maker-squirrel": "^6.0.4",
    "@electron-forge/maker-zip": "^6.0.4",
    "@types/node": "^16.11.6",
    "copyfiles": "^2.4.1",
    "electron": "22.0.0",
    "tsc": "^2.0.4",
    "typescript": "^4.9.4",
    "yarn": "^3.4.1"
  }
}
