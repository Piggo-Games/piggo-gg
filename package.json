    "html-loader": "^4.2.0",
    "http-server": "^14.1.1",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsc": "^2.0.4",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
