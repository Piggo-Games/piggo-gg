datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  output          = "generated"
  previewFeatures = ["views", "relationJoins"]
}

model User {
  id                     String    @id @default(uuid())
  name                   String
  email                  String    @unique
  sentFriendRequests     Friends[] @relation("Friendship1")
  receivedFriendRequests Friends[] @relation("Friendship2")
}

model Friends {
  id        String           @id @default(uuid())
  user1     User             @relation("Friendship1", fields: [user1Id], references: [id])
  user1Id   String
  user2     User             @relation("Friendship2", fields: [user2Id], references: [id])
  user2Id   String
  status    FriendshipStatus @default(PENDING)
  createdAt DateTime         @default(now())

  @@unique([user1Id, user2Id])
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  BLOCKED
}
