{
  "compilerOptions": {
    // "target": "es5",
    // "lib": ["ESNext"],
    // "module": "NodeNext",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "outDir": "./dist",
    "lib": ["es2015", "dom"],
    "baseUrl": ".",
    "target": "ESNext",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["pkg/**/*", "app/**/*"]
}
